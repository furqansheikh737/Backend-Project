<% include ./partials/header.ejs %>
  <div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[26rem] h-9/12 bg-white px-14 py-5 rounded-[3rem] ">
      <h1 class="text-3xl text-center tracking-tighter leading-none font-semibold text-zinc-700 mb-10 mt-5 ">Welcome to
        Pinterest</h1>
      <form action="/register" method="post">
        <input class="w-full block px-4 py-3 border-2 mt-5 rounded-[1rem]" type="text" name="username" placeholder="username">
        <input class="w-full block px-4 py-3 border-2 mt-5 rounded-[1rem]" type="email" name="email" placeholder="email">
        <input class="w-full block px-4 py-3 border-2 mt-5 rounded-[1rem]" type="number" name="contact" placeholder="contact">
        <input class="w-full block px-4 py-3 border-2 mt-5 rounded-[1rem]" type="password" name="password" placeholder="password">
        <input class="w-full block px-4 py-3 border-2 bg-red-600 text-white mt-5 rounded-full" type="submit" value="Signup">
        <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge you've read our Privacy Policy Notice at collection</p>
      </form>
      <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Already have an account?</a>
    </div>
  </div>
<% include ./partials/footer.ejs %>